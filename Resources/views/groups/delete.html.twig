{% extends 'base.html.twig' %}

{% block title %}Deleting Group {{ group.id}}: {{group.name}}{% endblock %}

{% block body %}
  <div class="container">
    <div class="row align-items-md-center">
      <div class="col-12">
        <h1>Deleting Group {{ group.id}}: {{group.name}}</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        {% if form is defined %}
          <p>{{ 'Are you sure you want to delete this group: %group_label%?'|trans({'%group_label%': group.getName }) }}</p>
          {{ form(form) }}
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
