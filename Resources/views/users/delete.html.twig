{% extends 'base.html.twig' %}
{% set userManager = get_user_manager().setUser(user) %}

{% block title %}Deleting User {{ user.id}}: {{userManager.getDisplayName}}{% endblock %}

{% block body %}
  <div class="container">
    <div class="row align-items-md-center">
      <div class="col-12">
        <h1>Deleting User {{ user.id}}: {{userManager.getDisplayName}}</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        {% if form is defined %}
          <p>{{ 'Are you sure you want to delete this user: %user_label%?'|trans({'%user_label%': userManager.getDisplayName }) }}</p>
          {{ form(form) }}
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
