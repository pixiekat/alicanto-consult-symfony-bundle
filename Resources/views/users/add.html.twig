{% extends 'base.html.twig' %}

{% block title %}Add a User{% endblock %}

{% block body %}
  <div class="container">
    <div class="row align-items-md-center">
      <div class="col-12">
        <h1>Add a User</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        {% if form is defined %}
          {{ form_start(form, {'attr': {'formnovalidate': 'formnovalidate'}}) }}
            {{ form_errors(form) }}
            {{ form(form) }}
          {{ form_end(form) }}
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
